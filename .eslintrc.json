{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "URI": true
  },
  "extends": ["google"],
  "rules": {
    "arrow-parens": [1, "always"],
    "linebreak-style": 2,
    "max-len": [1, 120, 4, {
      "ignoreComments": true,
      "ignoreUrls": true
    }],
    "no-negated-condition": 0,
    "no-warning-comments": 0,
    "object-curly-spacing": 0,
    "one-var": 0,
    "one-var-declaration-per-line": 0,
    "require-jsdoc": 0,
    "comma-dangle": 0,
    "new-cap": 0
  }
}
